{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Initial setup",
            "type": "shell",
            "command": "composer install && ./vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/php-compatibility/PHPCompatibility,vendor/phpcompatibility/phpcompatibility-paragonie/PHPCompatibilityParagonieRandomCompat,vendor/phpcompatibility/phpcompatibility-paragonie/PHPCompatibilityParagonieSodiumCompat,vendor/phpcompatibility/phpcompatibility-wp/PHPCompatibilityWP && wget -P vendor/bin https://phpdoc.org/phpDocumentor.phar && composer dump-autoload && npm install && npm run build && vagrant ssh -c 'bash /srv/www/wordpress-foundation/public_html/wp-content/themes/wordpress-foundation/tests/bin/install-wp-tests.sh wordpress_test root root localhost; bash /srv/www/wordpress-foundation/public_html/wp-content/themes/wordpress-foundation/tests/bin/install-plugins.sh; cd /srv/www/wordpress-foundation/public_html/wp-content/themes/wordpress-foundation/'",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "VVV up and setup test env",
            "type": "shell",
            "command": "vagrant up && vagrant ssh -c 'bash /srv/www/wordpress-foundation/public_html/wp-content/themes/wordpress-foundation/tests/bin/install-wp-tests.sh wordpress_test root root localhost; bash /srv/www/wordpress-foundation/public_html/wp-content/themes/wordpress-foundation/tests/bin/install-plugins.sh; cd /srv/www/wordpress-foundation/public_html/wp-content/themes/wordpress-foundation/'",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
