{
    "name": "wordpress-foundation",
    "version": "0.1.0",
    "browserslist": [
        "defaults"
    ],
    "scripts": {
        "lint:scss": "stylelint assets/src/sass/style.scss",
        "lint:js": "eslint assets/src/js/index.js",
        "prettier:scss": "prettier assets/src/sass/style.scss",
        "prettier:js": "prettier assets/src/js/index.js",
        "lint:scss:fix": "stylelint assets/src/sass/style.scss --fix",
        "lint:js:fix": "eslint assets/src/js/index.js --fix",
        "prettier:scss:fix": "prettier assets/src/sass/style.scss --fix",
        "prettier:js:fix": "prettier assets/src/js/index.js --fix",
        "jsdoc": "./node_modules/.bin/jsdoc -r assets/src/js/ -d docs/js",
        "sassdoc": "./node_modules/.bin/sassdoc assets/src/sass -d docs/sass",
        "build": "NODE_ENV=production webpack --config webpack.config.js",
        "watch": "NODE_ENV=development webpack --watch --config webpack.config.js",
        "test:php": "wp-env run --env-cwd=wp-content/themes/wordpress-foundation tests-wordpress ./vendor/bin/phpunit -c phpunit.xml.dist --verbose",
        "test:e2e": "wp-scripts test-playwright --config tests/e2e/playwright.config.ts",
        "test:e2e:debug": "wp-scripts test-playwright --config tests/e2e/playwright.config.ts --debug"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.8.1",
        "@babel/core": "^7.23.3",
        "@babel/plugin-transform-runtime": "^7.23.3",
        "@babel/preset-env": "^7.23.3",
        "@babel/preset-react": "^7.23.3",
        "@playwright/test": "^1.44.0",
        "@types/uuid": "^10.0.0",
        "@wordpress/e2e-test-utils-playwright": "^0.13.0",
        "@wordpress/scripts": "^30.18.0",
        "autoprefixer": "^10.4.16",
        "babel-loader": "^9.1.3",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "core-js": "^3.33.2",
        "css-loader": "^6.8.1",
        "css-minimizer-webpack-plugin": "^5.0.1",
        "dotenv": "^16.3.1",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-webpack": "^0.13.8",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-webpack-plugin": "^4.0.1",
        "file-loader": "^6.2.0",
        "jsdoc": "^4.0.2",
        "mini-css-extract-plugin": "^2.7.6",
        "po2json": "^0.4.5",
        "postcss-custom-properties": "^13.3.2",
        "postcss-loader": "^7.3.3",
        "prettier": "^3.0.3",
        "remove-files-webpack-plugin": "^1.5.0",
        "sass": "^1.69.5",
        "sass-loader": "^13.3.2",
        "sassdoc": "^2.7.4",
        "stylelint": "^15.11.0",
        "stylelint-config-recess-order": "^4.3.0",
        "stylelint-config-standard-scss": "^11.1.0",
        "stylelint-scss": "^5.3.1",
        "terser-webpack-plugin": "^5.3.9",
        "uuid": "^11.1.0",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-fix-style-only-entries": "^0.6.1"
    },
    "dependencies": {
        "@babel/runtime": "^7.23.2",
        "@wordpress/i18n": "^4.45.0",
        "focus-visible": "^5.2.0",
        "gsap": "^3.12.2",
        "imagesloaded": "^5.0.0",
        "lottie-web": "^5.13.0",
        "perfect-scrollbar": "^1.5.5",
        "swiper": "^12.0.2",
        "webfontloader": "^1.6.28"
    }
}
