{
    "name": "kazunorimiura/wordpress-foundation",
    "description": "Composer for my wordpress theme.",
    "authors": [
        {
            "name": "kazunorimiura",
            "email": "hello@kazunorimiura.com"
        }
    ],
    "autoload": {
        "classmap": [
            "includes/"
        ]
    },
    "scripts": {
        "post-update-cmd": [
            "./vendor/bin/phpcs --config-set installed_paths `pwd -P`/vendor/wp-coding-standards/wpcs,`pwd -P`/vendor/phpcompatibility/php-compatibility"
        ],
        "post-install-cmd": [
            "./vendor/bin/phpcs --config-set installed_paths `pwd -P`/vendor/wp-coding-standards/wpcs,`pwd -P`/vendor/phpcompatibility/php-compatibility"
        ],
        "phpcs": "./vendor/bin/phpcs -s",
        "phpcbf": "./vendor/bin/phpcbf"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/php-compatibility": "^9.3",
        "yoast/wp-test-utils": "^1.1",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "require": {
        "caseyamcl/toc": "^3.1"
    }
}
